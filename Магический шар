def game():
    import random
    answer = ["Бесспорно", "Предрешено", "Никаких сомнений", "Определённо да", "Можешь быть уверен в этом", "Мне кажется - да", "Вероятнее всего", "Хорошие перспективы", "Знаки говорят - да", "Да", "Пока неясно, попробуй снова",
    "Спроси позже", "Лучше не рассказывать", "Сейчас нельзя предсказать", "Сконцентрируйся и спроси опять", "Даже не думай", "Мой ответ - нет", "По моим данным - нет", "Перспективы не очень хорошие", "Весьма сомнительно"]
    print('Привет Мир, я магический шар, и я знаю ответ на любой твой вопрос.')
    print('Как тебя зовут?')
    name = input()
    print('Привет', name)
    a = ''
    while a != 'н':
        print('Задай свой вопрос.')
        x = input()
        print(random.choice(answer))
        print('У тебя есть еще вопрос? да = д или нет = н')
        a = input()
        while a != 'д' and a != 'н':
            print('Введите правильный символ')
            a = input()
        if a == 'н':
            print('Возвращайся если возникнут вопросы!')
        if a == 'д':
            game()
game()
